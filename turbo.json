{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "inputs": [
        "**/*.{ts,tsx,js,mjs,cjs}",
        ".eslintrc.js",
        "eslint.config.js",
        "package.json"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["AUTH_SECRET"]
    }
  }
}
